<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main.com.bjsasc.plm.mapper.FileMapper">

    <resultMap id="BaseResultMap" type="main.com.bjsasc.plm.domain.File">
            <id property="id" column="id" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="form" column="form" jdbcType="VARCHAR"/>
            <result property="notes" column="notes" jdbcType="VARCHAR"/>
            <result property="size" column="size" jdbcType="VARCHAR"/>
            <result property="versionno" column="versionNo" jdbcType="VARCHAR"/>
            <result property="url" column="URL" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,form,
        notes,size,versionNo,
        URL
    </sql>

    <select id="selectByDocId"  resultType="File">
        SELECT * FROM file WHERE id IN (SELECT fileId FROM filelink WHERE docId = #{docId} AND versionNo = #{versionNo} )
    </select>
</mapper>
